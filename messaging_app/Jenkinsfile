pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')  // üëà You must create this in Jenkins
        IMAGE_NAME = 'samuel254/messaging_app'  // üëà Change to your Docker Hub username/repo
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Sam-Adk/alx-backend-python.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('messaging_app') {
                    script {
                        sh 'docker build -t $IMAGE_NAME:latest .'
                    }
                }
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    sh 'docker push $IMAGE_NAME:latest'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Docker image built and pushed successfully!"
        }
        failure {
            echo "‚ùå Build failed! Check Jenkins logs."
        }
    }
}


