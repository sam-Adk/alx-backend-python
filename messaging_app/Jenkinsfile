pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/Sam-Adk/alx-backend-python.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the project...'
                // Example: Run Python version check
                sh 'python3 --version'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                // Replace with your actual test command, e.g.:
                // sh 'pytest tests/'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the project...'
            }
        }
    }
}

